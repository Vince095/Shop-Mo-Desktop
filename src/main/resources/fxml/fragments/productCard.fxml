<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopmo.controllers.fragments.ProductCard">
   <children>
      <AnchorPane prefHeight="274.0" prefWidth="207.0">
         <children>
            <VBox fx:id="vbox" layoutY="-2.0" prefHeight="307.0" prefWidth="234.0" style="-fx-padding: 6; -fx-border-radius: 40;">
               <children>
                  <ImageView fx:id="productImage" fitHeight="175.0" fitWidth="256.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/shopping.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="productDetails" prefHeight="39.0" prefWidth="238.0" text="Product details">
                     <font>
                        <Font name="Arial Narrow Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="price" layoutX="10.0" layoutY="185.0" prefHeight="39.0" prefWidth="238.0" text="Price">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="detailsBtn" mnemonicParsing="false" prefHeight="39.0" prefWidth="230.0" style="-fx-background-color: #FEBD69;" text="View details">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
